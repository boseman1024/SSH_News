<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN" "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

	<!-- 请求参数的编码方式 -->
	<constant name="struts.i18n.encoding" value="utf-8" />
	<!-- 是否启用开发模式(开发时设置为true,发布到生产环境后设置为false) -->
	<constant name="struts.devMode" value="true" />
	<!-- struts配置文件改动后，是否重新加载(开发时设置为true,发布到生产环境后设置为false) -->
	<constant name="struts.configuration.xml.reload" value="false" />

	<constant value="spring" name="struts.objectFactory"/>
	
	<include file="com/news/struts/struts-login.xml"/>
	<include file="com/news/struts/struts-backstage.xml"/>
	<include file="com/news/struts/struts-newsinfo.xml"/>



</struts>
